generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String
  password  String
  createdAt DateTime @default(now())
}

model Todo {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  isDone      Boolean  @default(false)
  startDate   DateTime
  endDate     DateTime
}
